    {
      "parameters": {
        "jsCode": "// Filtrer les interventions de demain et grouper par technicien\nconst tomorrowStart = $('Set - Calculate Tomorrow').first().json.tomorrow_start;\nconst tomorrowEnd = $('Set - Calculate Tomorrow').first().json.tomorrow_end;\n\nconst interventions = $input.all();\nconst tomorrowStartDate = new Date(tomorrowStart);\nconst tomorrowEndDate = new Date(tomorrowEnd);\n\n// Filtrer pour demain\nconst tomorrowInterventions = interventions.filter(item => {\n  const startDate = new Date(item.json.start_datetime);\n  return startDate >= tomorrowStartDate && startDate <= tomorrowEndDate;\n});\n\n// Grouper par technicien\nconst byTechnician = {};\nfor (const item of tomorrowInterventions) {\n  const email = item.json.technician_email;\n  if (!email) continue;\n  \n  if (!byTechnician[email]) {\n    byTechnician[email] = {\n      technician_email: email,\n      technician_name: item.json.technician_name,\n      interventions: []\n    };\n  }\n  \n  byTechnician[email].interventions.push({\n    title: item.json.title,\n    start_datetime: item.json.start_datetime,\n    address: item.json.address\n  });\n}\n\n// Convertir en array pour output\nconst result = Object.values(byTechnician);\n\nif (result.length === 0) {\n  return [{ json: { no_interventions: true } }];\n}\n\nreturn result.map(r => ({ json: r }));"
      },
      "id": "code-filter-group",
      "name": "Code - Filter & Group by Technician",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [900, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition-has-interventions",
              "leftValue": "={{ $json.no_interventions }}",
              "rightValue": true,
              "operator": {
                "type": "boolean",
                "operation": "notEquals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "if-has-interventions",
      "name": "IF - Has Interventions?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1120, 300]
    },
    {
      "parameters": {
        "jsCode": "// Formater l'email pour ce technicien\nconst data = $input.first().json;\n\nlet interventionsList = '';\ndata.interventions.forEach((intervention, idx) => {\n  const time = new Date(intervention.start_datetime).toLocaleTimeString('fr-CH', { hour: '2-digit', minute: '2-digit' });\n  interventionsList += `${idx + 1}. ${time} - ${intervention.title}\\n   Adresse: ${intervention.address}\\n\\n`;\n});\n\nconst body = `Bonjour ${data.technician_name},\n\nTon planning de demain :\n\n${interventionsList}\nBonne journee !\n\nICS Chauffage & Sanitaire`;\n\nreturn [{\n  json: {\n    to: data.technician_email,\n    subject: 'Planning de demain',\n    body: body\n  }\n}];"
      },
